<div class="row">
  <%= f.label :target %>
</div>
  <div class="row">
  <%= f.text_field :target, :value => "127.0.0.1" %>
  </div>
    
<div class="row">
    <%= f.label :rate %>
</div>

<div class="row">
  <div class="small-10 columns">
    <div class="range-slider" data-slider data-options="start:1000; end: 10000; step:1000; display_selector: #rate; initial: 1000; precision: 0;">
      <span class="range-slider-handle" role="slider" tabindex="0"></span>
      <span class="range-slider-active-segment"></span>
    </div>
  </div>
  <div class="small-2 columns">
    <input type="number" id="rate" name="masscan[rate]" value="" />
  </div>
</div>

<%= f.submit data: { confirm: 'Scan will run in the background' } %>
<% end %>